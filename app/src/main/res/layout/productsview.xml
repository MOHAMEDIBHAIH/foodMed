<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:elevation="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView

            android:id="@+id/gifImageView3"
            android:layout_width="76dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="291dp"
            android:src="@drawable/wow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <pl.droidsonroids.gif.GifImageView

            android:id="@+id/gifImageView4"
            android:layout_width="76dp"
            android:layout_height="71dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/wow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView

            android:id="@+id/gifImageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="247dp"
            android:src="@drawable/start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="13sp"
            android:layout_height="13sp"
            android:layout_below="@+id/title"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/textView17"
            app:srcCompat="@drawable/clock" />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="223dp"
            android:layout_height="152dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="152dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="21dp"
            android:src="@drawable/pizza1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingStart="15dp"
            android:text="title"
            android:textColor="#373b54"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_below="@+id/fee"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/orange_button"
            android:gravity="center"

            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="+Add"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="45dp"
            android:layout_height="32dp"
            android:layout_below="@id/pic"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="270dp"
            android:gravity="center"
            android:text="0.0"
            android:textColor="#373b54"
            android:textSize="20sp"
            android:textStyle="bold"


            app:layout_constraintEnd_toEndOf="@+id/pic" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/fee"
            android:text="Dh"
            android:textColor="#ff3d0d"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/imageView10"
            android:text="4.5" />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic"
            android:layout_marginStart="7dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/imageView11"
            android:text="20 - 30 min"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>